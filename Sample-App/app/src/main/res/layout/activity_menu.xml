<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/btn_core"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Core"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_edge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edge"
        app:layout_constraintStart_toStartOf="@+id/btn_core"
        app:layout_constraintTop_toBottomOf="@+id/btn_core" />

    <Button
        android:id="@+id/btn_assurance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assurance"
        app:layout_constraintEnd_toEndOf="@+id/btn_edge"
        app:layout_constraintStart_toStartOf="@+id/btn_edge"
        app:layout_constraintTop_toBottomOf="@+id/btn_edge" />
</androidx.constraintlayout.widget.ConstraintLayout>

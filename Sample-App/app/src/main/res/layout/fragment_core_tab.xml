<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img2"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.adobe.marketing.mobile.sampleapp.CoreTab">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">




        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"/>



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblEventingTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Trigger Analytics Events"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="10dp">


                        <Button
                            android:id="@+id/btn_emitActionEvent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/analytics_btnEmitActionEvent" />

                        <Button
                            android:id="@+id/btn_emitStateEvent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/analytics_btnEmitStateEvent" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblOptingTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Change Privacy Status"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblOptingDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Opting in allows events in the queue to be sent. Opting out prevents the eventing queue from filling. Opting 'unknown' allows the queue to fill, but events are not sent until the user opts in." />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <RadioButton
                            android:id="@+id/rdoOptIn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="Opt In" />

                        <RadioButton
                            android:id="@+id/rdoOptOut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Opt Out" />

                        <RadioButton
                            android:id="@+id/rdoOptUnknown"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Opt Unknown" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_getPrivacy"
                        android:layout_width="117dp"
                        android:layout_height="wrap_content"
                        android:text="Get Privacy" />

                    <TextView
                        android:id="@+id/text_currentPrivacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Privacy:" />

                </LinearLayout>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collect PII"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_collectPII"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collect PII" />

                </LinearLayout>

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Configuration"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_updateConfig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Configuration" />
                </LinearLayout>

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Identity APIs"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/btn_setAdvertisingId"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Set Advertising Identifier" />

                    <Button
                        android:id="@+id/btn_setPushId"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Set Push Identifier" />

                    <Button
                        android:id="@+id/btn_getECID"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Get ExperienceCloudID" />

                    <Button
                        android:id="@+id/btn_getUrlVar"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Get URL Variables" />

                    <Button
                        android:id="@+id/btn_syncId"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Sync Identifiers" />

                    <Button
                        android:id="@+id/btn_getSdkId"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Get SDK Identities" />

                    <Button
                        android:id="@+id/btn_appendUrl"
                        android:layout_width="210dp"
                        android:layout_height="wrap_content"
                        android:text="Append URL" />
                </LinearLayout>


            </LinearLayout>

        </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</FrameLayout>